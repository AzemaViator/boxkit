{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update version strings in mise config.toml",
      "managerFilePatterns": [
        "/(^|/)\\.?mise\\.toml$/",
        "/(^|/)\\.?mise/config\\.toml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+)(?: depName=(?<depName>[\\w@./-]+))?(?: packageName=(?<packageNameComment>[\\w@./-]+))?(?: versioning=(?<versioning>[a-z-]+))?\\s*[\\r\\n]+(?<packageName>[^\\s=]+)\\s*=\\s*\"(?<currentValue>[^\"]+)\"\n"
      ]
    }
  ]
}
